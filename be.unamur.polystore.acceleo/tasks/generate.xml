<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="be.unamur.polystore.acceleo">
    <property name="ECLIPSE_HOME" value="../../../../../eclipse/jee-2020-093/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="be.unamur.polystore.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/be.unamur.polystore.acceleo/bin"/>
    </path>

    <path id="be.unamur.polystore.acceleo.classpath">
        <path refid="be.unamur.polystore.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="be.unamur.polystore.acceleo.libraryclasspath.alljars">
        <pathelement location="../be.unamur.polystore.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="be.unamur.polystore.acceleo.classpath.alljars">
        <path refid="be.unamur.polystore.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="be.unamur.polystore.acceleo.main.Generate" classpathref="be.unamur.polystore.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="be.unamur.polystore.acceleo.main.Generate" classpathref="be.unamur.polystore.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
